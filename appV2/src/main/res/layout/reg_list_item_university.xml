<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <View
        android:id="@+id/viewSelected"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:background="@drawable/border_green"
        app:layout_constraintBottom_toBottomOf="@id/ivBoardImage"
        app:layout_constraintTop_toTopOf="@id/ivBoardImage" />

    <ImageView
        android:id="@+id/ivBoardImage"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:padding="4dp"
        android:src="@drawable/ksee"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBoardName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:lines="3"
        android:paddingStart="4dp"
        android:paddingEnd="8dp"
        android:text="Karnataka Secondary Education Examination Board"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/ivBoardImage"
        app:layout_constraintLeft_toRightOf="@id/ivBoardImage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivBoardImage" />

</androidx.constraintlayout.widget.ConstraintLayout>