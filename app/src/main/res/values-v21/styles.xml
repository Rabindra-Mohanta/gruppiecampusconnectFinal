<resources>>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="android:editTextStyle">@style/AppTheme.EditText</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>

    <style name="FragmentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">70%</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>
    <style name="TextAppearance.Bold" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/robo_bold.ttf</item>
    </style>


    <style name="TextAppearance.Regular" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/robo_regular.ttf</item>
    </style>


    <style name="TextAppearance.Light" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/robo_light.ttf</item>
    </style>



</resources>
