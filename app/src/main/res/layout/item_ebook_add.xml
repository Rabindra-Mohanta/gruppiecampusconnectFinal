<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding_10dp"
    android:layout_marginTop="@dimen/padding_5dp"
    android:layout_marginRight="@dimen/padding_10dp"
    android:layout_marginBottom="@dimen/padding_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_5dp"
        android:layout_marginTop="@dimen/padding_5dp"
        android:layout_marginBottom="@dimen/padding_5dp"
        android:layout_marginRight="@dimen/padding_30dp"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/tvSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/lbl_add_subject"
            android:singleLine="true"
            android:focusable="false"
            android:clickable="false"
            android:textSize="@dimen/text_size_13sp" />
        <EditText
            android:id="@+id/etDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/lbl_post_add_desc"
            android:focusable="false"
            android:clickable="false"
            android:singleLine="true"
            android:textSize="@dimen/text_size_13sp" />

        <TextView
            android:id="@+id/etPdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/round_rect_gray"
            android:paddingTop="@dimen/padding_5dp"
            android:layout_marginLeft="@dimen/padding_5dp"
            android:layout_marginTop="@dimen/padding_5dp"
            android:paddingLeft="@dimen/padding_5dp"
            android:paddingRight="@dimen/padding_5dp"
            android:layout_marginBottom="@dimen/padding_5dp"
            android:paddingBottom="@dimen/padding_5dp"
            android:hint="@string/hint_select_Pdf_Book"
            android:singleLine="true"
            android:textSize="@dimen/text_size_13sp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="@dimen/padding_30dp"
        android:layout_height="@dimen/padding_30dp"
        android:tint="@android:color/holo_red_dark"
        android:layout_gravity="right|top"
        android:padding="@dimen/padding_5dp"
        app:srcCompat="@drawable/ic_close" />
</androidx.cardview.widget.CardView>