<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/img_add"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/padding_25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:src="@drawable/btn_add" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_lead"
                android:layout_width="@dimen/list_image_size"
                android:layout_height="@dimen/list_image_size"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/icon_default_user" />


            <ImageView
                android:id="@+id/img_lead_default"
                android:layout_width="@dimen/list_image_size"
                android:layout_height="@dimen/list_image_size"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_default_user"
                android:visibility="invisible"
                android:layout_alignParentLeft="true" />

            <LinearLayout
                android:id="@+id/relative_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/img_lead"
                android:layout_toStartOf="@+id/img_add"
                android:orientation="vertical"
                android:layout_toRightOf="@id/img_lead"
                android:layout_toLeftOf="@+id/img_add">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/padding_16dp"
                    android:paddingStart="16dp"
                    android:singleLine="true"
                    android:text="Name"
                    android:textColor="@color/colorPrimary"
                    style="@style/LabelNormal"
                    android:paddingRight="@dimen/padding_16dp"
                    android:paddingLeft="16dp" />

                <TextView
                    android:id="@+id/txt_gruppie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/padding_16dp"
                    android:paddingStart="16dp"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.Light"
                    android:textColor="@color/color_grey_icon"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:layout_toRightOf="@id/img_lead"
                    android:paddingRight="@dimen/padding_16dp"
                    android:paddingLeft="16dp" />

                <TextView
                    android:id="@+id/txt_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingEnd="@dimen/padding_16dp"
                    android:paddingStart="16dp"
                    android:singleLine="true"
                    android:text="ssd"
                    style="@style/LabelNormal"
                    android:textColor="@color/colorTextLight"
                    android:paddingRight="@dimen/padding_16dp"
                    android:paddingLeft="16dp" />



            </LinearLayout>
            <CheckBox
            android:id="@+id/cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:visibility="gone" />

        </RelativeLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/color_divider"
        android:layout_marginLeft="@dimen/padding_15dp"
        android:layout_marginRight="@dimen/padding_15dp"
        android:layout_height="1px"/>
</LinearLayout>