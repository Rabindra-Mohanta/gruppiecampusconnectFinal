<?xml version="1.0" encoding="utf-8"?>

<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            >
            <ImageView
                android:id="@+id/iconBack"
                android:layout_width="wrap_content"
                android:padding="@dimen/padding_15dp"
                android:src="@drawable/icon_back_arrow"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iconAdd"
                android:layout_width="?attr/actionBarSize"
                android:padding="@dimen/padding_15dp"
                android:src="@drawable/ic_add_post_new"
                android:layout_toLeftOf="@id/iconRotate"
                android:layout_height="?attr/actionBarSize" />


            <ImageView
                android:id="@+id/iconRotate"
                android:layout_width="50dp"
                android:padding="@dimen/padding_10dp"
                android:layout_toLeftOf="@id/iconShareExternal"
                android:src="@drawable/icon_rorate_right"
                android:layout_height="50dp" />

            <ImageView
                android:id="@+id/iconShareExternal"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:padding="@dimen/padding_15dp"
                android:src="@drawable/ic_share"
                android:layout_height="wrap_content" />
        </RelativeLayout>



        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</layout>
