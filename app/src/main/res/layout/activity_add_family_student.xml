<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddStudentActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include layout="@layout/layout_toolbar" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_15dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_10dp"
                app:cardCornerRadius="@dimen/padding_10dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_10dp"
                    android:layout_marginEnd="@dimen/padding_10dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/LabelNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_20dp"
                        android:paddingLeft="@dimen/padding_10dp"
                        android:text="@string/lbl_name"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary" />

                    <EditText
                        android:id="@+id/etName"
                        style="@style/RegEditText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/login_button_height"
                        android:layout_marginTop="@dimen/padding_5dp"
                        android:inputType="textPersonName|textCapWords" />

                    <TextView
                        style="@style/LabelNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_20dp"
                        android:paddingLeft="@dimen/padding_10dp"
                        android:text="@string/relationship"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary" />

                    <EditText
                        android:id="@+id/etRelationShip"
                        style="@style/RegEditText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/login_button_height"
                        android:layout_marginTop="@dimen/padding_5dp"
                        android:inputType="textPersonName|textCapWords" />

                    <TextView
                        style="@style/LabelNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_20dp"
                        android:paddingLeft="@dimen/padding_10dp"
                        android:text="@string/lbl_address"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary" />

                    <EditText
                        android:id="@+id/etAddress"
                        style="@style/RegEditText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/login_button_height"
                        android:layout_marginTop="@dimen/padding_5dp"
                        android:inputType="textPersonName|textCapWords" />


                    <TextView
                        android:id="@+id/labelPhone"
                        style="@style/LabelNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_15dp"
                        android:paddingLeft="@dimen/padding_10dp"
                        android:text="@string/lbl_phone2"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary" />

                    <EditText
                        android:id="@+id/etPhone"
                        style="@style/RegEditText"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="@dimen/padding_10dp"
                        android:layout_height="@dimen/login_button_height"
                        android:layout_marginTop="@dimen/padding_5dp"
                        android:inputType="phone" />

                    <TextView
                        style="@style/LabelNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_20dp"
                        android:paddingLeft="@dimen/padding_10dp"
                        android:text="@string/lbl_dob"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary" />

                    <EditText
                        android:id="@+id/etdob"
                        style="@style/RegEditText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/login_button_height"
                        android:focusable="false"
                        android:layout_marginTop="@dimen/padding_5dp"
                        android:inputType="textPersonName|textCapWords" />
                    <TextView
                        style="@style/LabelNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_20dp"
                        android:paddingLeft="@dimen/padding_10dp"
                        android:text="@string/lbl_gender"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary" />

                    <Spinner
                        android:id="@+id/etGender"
                        style="@style/RegEditText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/login_button_height"
                        android:layout_marginTop="@dimen/padding_5dp" />
                    <TextView
                        style="@style/LabelNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_20dp"
                        android:paddingLeft="@dimen/padding_10dp"
                        android:text="@string/lbl_bloodGroup"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary" />

                    <Spinner
                        android:id="@+id/etBlood"
                        style="@style/RegEditText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/login_button_height"
                        android:layout_marginTop="@dimen/padding_5dp" />

                    <TextView
                        style="@style/LabelNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_20dp"
                        android:paddingLeft="@dimen/padding_10dp"
                        android:text="@string/lbl_voterId"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary" />

                    <EditText
                        android:id="@+id/etVoterId"
                        style="@style/RegEditText"
                        android:singleLine="true"

                        android:layout_marginBottom="@dimen/padding_10dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/login_button_height"
                        android:layout_marginTop="@dimen/padding_5dp"
                        android:inputType="text" />
                    <TextView
                        style="@style/LabelNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_20dp"
                        android:paddingLeft="@dimen/padding_10dp"
                        android:text="@string/lbl_adharNumber"
                        android:textAllCaps="true"
                        android:visibility="gone"
                        android:textColor="@color/colorPrimary" />

                    <EditText
                        android:id="@+id/etAadhar"
                        style="@style/RegEditText"
                        android:singleLine="true"
                        android:layout_marginBottom="@dimen/padding_10dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/login_button_height"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/padding_5dp"
                        android:inputType="text" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnAdd"
                style="@style/AddPostButton"
                android:layout_width="@dimen/login_button_width"
                android:layout_height="@dimen/login_button_height"
                android:layout_marginTop="@dimen/padding_20dp"
                android:text="@string/lbl_add" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>