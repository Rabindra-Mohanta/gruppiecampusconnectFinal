<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_marginBottom="@dimen/padding_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardImg"
            android:layout_marginTop="@dimen/padding_10dp"
            android:layout_width="@dimen/padding_50dp"
            android:layout_height="@dimen/padding_50dp"
            app:cardCornerRadius="@dimen/padding_50dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:background="@color/colorPrimary"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/padding_20dp"
            android:layout_toRightOf="@id/cardImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginTop="@dimen/padding_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    style="@style/LabelHeader1"
                    android:textColor="@color/black"
                    android:layout_toLeftOf="@id/tvcommentTime"
                    android:id="@+id/tvName"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/LabelSmall"
                    android:textColor="@color/colorTextLight"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tvcommentTime"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <TextView
                style="@style/LabelHeader1"
                android:textColor="@color/colorTextLight"
                android:id="@+id/tvDesc"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </RelativeLayout>
</layout>
