<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <school.campusconnect.views.TouchImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/ivDownload"
        android:layout_width="@dimen/padding_40dp"
        android:layout_height="@dimen/padding_40dp"
        android:src="@drawable/download"
        android:layout_margin="@dimen/padding_10dp"
        android:visibility="gone"
        android:background="@drawable/date_circle_background"
        android:layout_gravity="bottom|center"/>

    <ImageView
        android:id="@+id/iconBack"
        android:layout_width="50dp"
        android:padding="@dimen/padding_15dp"
        android:src="@drawable/icon_back_arrow"
        android:layout_height="50dp" />
    <ImageView
        android:id="@+id/iconRotate"
        android:layout_gravity="end"
        android:layout_width="50dp"
        android:padding="@dimen/padding_10dp"
        android:src="@drawable/icon_rorate_right"
        android:layout_height="50dp" />

</FrameLayout>