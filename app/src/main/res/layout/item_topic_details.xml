<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_5dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            android:layout_marginHorizontal="@dimen/padding_10dp"
            app:cardCornerRadius="@dimen/padding_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="@dimen/padding_5dp"
                android:paddingBottom="@dimen/padding_5dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:layout_marginLeft="@dimen/padding_10dp"
                        android:layout_gravity="center"
                        android:textColor="@color/colorTextDark"
                        style="@style/LabelHeader1" />

                    <ImageView
                        android:id="@+id/imgEdit"
                        android:layout_gravity="right|center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_10dp"
                        android:src="@drawable/ic_edit_svg"
                        android:visibility="gone"
                        android:tint="@color/colorTextDark"
                        android:paddingRight="16dp" />

                    <ImageView
                        android:id="@+id/img_tree"
                        android:layout_gravity="right|center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_10dp"
                        android:src="@drawable/icon_right_arraw"
                        android:rotation="90"
                        android:tint="@color/colorTextDark"
                        android:paddingRight="16dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:id="@+id/llExpand">

                    <TextView
                        style="@style/LabelNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_10dp"
                        android:paddingLeft="@dimen/padding_20dp"
                        android:text="@string/lbl_plan"
                        android:textAllCaps="true"
                        android:textColor="@color/black" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_marginHorizontal="@dimen/padding_10dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                style="@style/LabelNormal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_10dp"
                                android:paddingLeft="@dimen/padding_10dp"
                                android:text="@string/lbl_from_date"
                                android:textAllCaps="true"
                                android:textColor="@color/colorPrimary" />
                            <EditText
                                android:id="@+id/etFromDate"
                                style="@style/RegEditText"
                                android:layout_width="match_parent"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:layout_height="@dimen/login_button_height"
                                android:inputType="datetime" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginHorizontal="@dimen/padding_10dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                style="@style/LabelNormal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_10dp"
                                android:paddingLeft="@dimen/padding_10dp"
                                android:text="@string/lbl_to_date"
                                android:textAllCaps="true"
                                android:textColor="@color/colorPrimary" />
                            <EditText
                                android:id="@+id/etToDate"
                                style="@style/RegEditText"
                                android:layout_width="match_parent"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:layout_height="@dimen/login_button_height"
                                android:inputType="datetime" />
                        </LinearLayout>

                    </LinearLayout>
                    <TextView
                        style="@style/LabelNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_10dp"
                        android:paddingLeft="@dimen/padding_20dp"
                        android:text="@string/lbl_actual"
                        android:textAllCaps="true"
                        android:textColor="@color/black" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_marginHorizontal="@dimen/padding_10dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                style="@style/LabelNormal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_10dp"
                                android:paddingLeft="@dimen/padding_10dp"
                                android:text="@string/lbl_from_date"
                                android:textAllCaps="true"
                                android:textColor="@color/colorPrimary" />
                            <EditText
                                android:id="@+id/etActualFromDate"
                                style="@style/RegEditText"
                                android:layout_width="match_parent"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:layout_height="@dimen/login_button_height"
                                android:inputType="datetime" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginHorizontal="@dimen/padding_10dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                style="@style/LabelNormal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_10dp"
                                android:paddingLeft="@dimen/padding_10dp"
                                android:text="@string/lbl_to_date"
                                android:textAllCaps="true"

                                android:textColor="@color/colorPrimary" />
                            <EditText
                                android:id="@+id/etActualToDate"
                                style="@style/RegEditText"
                                android:layout_width="match_parent"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:layout_height="@dimen/login_button_height"
                                android:inputType="datetime" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        style="@style/LabelNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_10dp"
                        android:paddingLeft="@dimen/padding_20dp"
                        android:textColor="@color/grey"
                        android:text="Status : Completed"
                        android:textAllCaps="true"/>

                    <Button
                        android:id="@+id/btnDone"
                        android:layout_marginTop="@dimen/padding_20dp"
                        android:layout_marginHorizontal="@dimen/padding_10dp"
                        android:layout_width="wrap_content"
                        android:text="@string/lbl_submit"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:paddingHorizontal="@dimen/padding_40dp"
                        android:background="@drawable/add_post_button_bg"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</layout>
