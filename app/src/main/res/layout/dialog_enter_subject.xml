<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/padding_15dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/llSubject"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="Submit Attendance"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_height="wrap_content" />
        <TextView
            style="@style/LabelNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_20dp"
            android:paddingLeft="@dimen/padding_10dp"
            android:text="@string/lbl_subject_name"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/etName"
            style="@style/RegEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_button_height"
            android:layout_marginTop="@dimen/padding_5dp"
            android:inputType="textPersonName" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llSubmit"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/padding_5dp"
        android:layout_marginTop="@dimen/padding_25dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="100dp"
            android:text="Cancel"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginEnd="@dimen/padding_5dp"
            android:background="@drawable/add_post_button_bg"
            android:layout_height="35dp" />
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="100dp"
            android:text="Submit"
            android:layout_marginStart="@dimen/padding_5dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/add_post_button_bg"
            android:layout_height="35dp" />
    </LinearLayout>

</LinearLayout>