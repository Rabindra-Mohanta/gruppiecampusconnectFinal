<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginHorizontal="@dimen/padding_15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:id="@+id/relative"
                    app:cardElevation="3dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="@dimen/padding_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/list_divider"
                        android:padding="10dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_lead"
                            android:layout_width="@dimen/user_image_size_v2"
                            android:layout_height="@dimen/user_image_size_v2"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/icon_default_user" />

                        <ImageView
                            android:id="@+id/img_lead_default"
                            android:layout_width="@dimen/user_image_size_v2"
                            android:layout_height="@dimen/user_image_size_v2"
                            android:layout_alignParentStart="true"
                            android:visibility="invisible"
                            android:src="@drawable/icon_default_user" />

                        <TextView
                            android:id="@+id/txt_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/img_lead"
                            android:paddingEnd="@dimen/padding_16dp"
                            android:paddingStart="16dp"

                            android:textColor="@color/color_orange_hover"
                            android:textSize="16sp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relative"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="0.6"
                        android:orientation="vertical"
                        android:paddingRight="@dimen/padding_8dp">


                        <TextView
                            android:id="@+id/label_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="end"
                            android:paddingTop="@dimen/padding_10dp"
                            android:text="@string/lbl_phone"
                            android:textColor="@color/color_grey_icon"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/label_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="end"
                            android:paddingTop="@dimen/padding_10dp"
                            android:text="@string/lbl_email"
                            android:textColor="@color/color_grey_icon"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:paddingTop="@dimen/padding_10dp"
                            android:text="@string/lbl_gender"
                            android:textColor="@color/color_grey_icon"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:paddingTop="@dimen/padding_10dp"
                            android:text="@string/lbl_dob"
                            android:textColor="@color/color_grey_icon"
                            android:textSize="16sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:paddingTop="@dimen/padding_10dp"
                            android:text="@string/lbl_address"
                            android:textColor="@color/color_grey_icon"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:paddingTop="@dimen/padding_10dp"
                            android:text="@string/lbl_lead_city"
                            android:textColor="@color/color_grey_icon"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:paddingTop="@dimen/padding_10dp"
                            android:text="@string/lbl_state"
                            android:textColor="@color/color_grey_icon"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:paddingTop="@dimen/padding_10dp"
                            android:text="@string/lbl_pincode"
                            android:textColor="@color/color_grey_icon"
                            android:textSize="16sp" />


                        <TextView
                            android:id="@+id/lbl_ocupation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:paddingTop="@dimen/padding_10dp"
                            android:text="@string/lbl_ocupation"
                            android:textColor="@color/color_grey_icon"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/txt_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="start"
                            android:paddingTop="@dimen/padding_10dp"
                            android:textColor="@color/color_323232"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="start"
                            android:paddingTop="@dimen/padding_10dp"
                            android:textColor="@color/color_323232"
                            android:textSize="16sp" />


                        <TextView
                            android:id="@+id/txt_gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="start"

                            android:paddingTop="@dimen/padding_10dp"
                            android:textColor="@color/color_323232"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt_dob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="start"

                            android:paddingTop="@dimen/padding_10dp"
                            android:textColor="@color/color_323232"
                            android:textSize="16sp" />


                        <TextView
                            android:id="@+id/txt_addr_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="start"

                            android:paddingTop="@dimen/padding_10dp"
                            android:textColor="@color/color_323232"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="start"

                            android:paddingTop="@dimen/padding_10dp"
                            android:textColor="@color/color_323232"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt_state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="start"

                            android:paddingTop="@dimen/padding_10dp"
                            android:textColor="@color/color_323232"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt_pincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="start"

                            android:paddingTop="@dimen/padding_10dp"
                            android:textColor="@color/color_323232"
                            android:textSize="16sp" />


                        <TextView
                            android:id="@+id/txt_ocupation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="start"

                            android:paddingTop="@dimen/padding_10dp"
                            android:textColor="@color/color_323232"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_10dp"
            android:paddingTop="@dimen/padding_10dp"
            android:text="@string/lbl_groupheading"
            android:textColor="@color/color_323232"
            android:textSize="16sp" />

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/rvGrpList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>
