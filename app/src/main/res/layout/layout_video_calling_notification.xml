<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        android:paddingVertical="@dimen/padding_5dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activities.VideoCallingActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvNotificationTitle"
                style="@style/LabelNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_10dp"
                android:text="sdfsfdsfdsdfsfdsfds"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/padding_10dp"
                android:layout_marginVertical="@dimen/padding_5dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnStop"
                    android:layout_width="120dp"
                    android:background="@drawable/red_btn_bg_normal"
                    android:text="REJECT"
                    android:textColor="@color/white"
                    android:layout_height="30dp" />

                <Button
                    android:id="@+id/btnStart"
                    android:layout_width="120dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/green_call_btn_bg"
                    android:text="ACCEPT"
                    android:textColor="@color/white"
                    android:layout_height="30dp" />
            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>
</layout>
