<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateTeamActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include layout="@layout/layout_toolbar" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/frameMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_15dp"
                    app:cardCornerRadius="@dimen/padding_10dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_10dp"
                        android:layout_marginTop="@dimen/padding_15dp"
                        android:layout_marginRight="@dimen/padding_10dp"
                        android:layout_marginBottom="@dimen/padding_10dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/LabelHeader1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_15dp"
                            android:paddingLeft="@dimen/padding_10dp"
                            android:text="@string/lbl_departmentTaskForce"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            style="@style/LabelNormal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_15dp"
                            android:paddingLeft="@dimen/padding_10dp"
                            android:text="@string/lbl_name"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary" />

                        <EditText
                            android:id="@+id/etName"
                            style="@style/RegEditText"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/login_button_height"
                            android:layout_marginTop="@dimen/padding_5dp"
                            android:inputType="textCapSentences" />

                        <TextView
                            style="@style/LabelNormal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_15dp"
                            android:paddingLeft="@dimen/padding_10dp"
                            android:text="@string/lbl_phone"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary" />

                        <EditText
                            android:id="@+id/etPhone"
                            style="@style/RegEditText"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/login_button_height"
                            android:layout_marginTop="@dimen/padding_5dp"
                            android:inputType="phone" />

                        <TextView
                            style="@style/LabelNormal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_15dp"
                            android:paddingLeft="@dimen/padding_10dp"
                            android:text="@string/lbl_designation"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary" />

                        <EditText
                            android:id="@+id/etDesig"
                            style="@style/RegEditText"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/login_button_height"
                            android:layout_marginTop="@dimen/padding_5dp"
                            android:inputType="textPersonName" />


                        <TextView
                            style="@style/LabelHeader1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_25dp"
                            android:paddingLeft="@dimen/padding_10dp"
                            android:text="@string/lbl_partyTaskForce"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            style="@style/LabelNormal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_15dp"
                            android:paddingLeft="@dimen/padding_10dp"
                            android:text="@string/lbl_name"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary" />

                        <EditText
                            android:id="@+id/etName2"
                            style="@style/RegEditText"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/login_button_height"
                            android:layout_marginTop="@dimen/padding_5dp"
                            android:inputType="textCapSentences" />

                        <TextView
                            style="@style/LabelNormal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_15dp"
                            android:paddingLeft="@dimen/padding_10dp"
                            android:text="@string/lbl_phone"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary" />

                        <EditText
                            android:id="@+id/etPhone2"
                            style="@style/RegEditText"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/login_button_height"
                            android:layout_marginTop="@dimen/padding_5dp"
                            android:inputType="phone" />

                        <TextView
                            style="@style/LabelNormal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_15dp"
                            android:paddingLeft="@dimen/padding_10dp"
                            android:text="@string/lbl_designation"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary" />

                        <EditText
                            android:id="@+id/etDesig2"
                            style="@style/RegEditText"
                            android:layout_marginBottom="@dimen/padding_50dp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/login_button_height"
                            android:layout_marginTop="@dimen/padding_5dp"
                            android:inputType="textPersonName" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <Button
                android:id="@+id/btnCreateClass"
                style="@style/AddPostButton"
                android:layout_width="@dimen/login_button_width"
                android:layout_height="@dimen/login_button_height"
                android:layout_below="@+id/frameMain"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-40dp"
                android:layout_marginBottom="@dimen/padding_20dp"
                android:text="@string/lbl_edit" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>