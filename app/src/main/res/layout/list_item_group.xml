        android:src="@drawable/ic_people"
        android:layout_centerHorizontal="true"
       />

    <ImageView
        android:id="@+id/img_group_new_default"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        />
