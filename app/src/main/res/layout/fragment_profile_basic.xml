<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_15dp">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_15dp"
        android:orientation="vertical">

        <school.campusconnect.views.DrawableEditText
            android:id="@+id/lead_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_20dp"
            android:inputType="textCapSentences|textNoSuggestions"
            android:textAppearance="@style/TextAppearance.Light"
            app:leftDrawable="@drawable/ic_person"
            app:textHint="Name" />


        <school.campusconnect.views.DrawableEditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_20dp"
            android:inputType="number"
            app:leftDrawable="@drawable/ic_phone"
            android:textAppearance="@style/TextAppearance.Light"
            app:textHint="Phone number" />

        <school.campusconnect.views.DrawableEditText
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_20dp"
            app:leftDrawable="@drawable/ic_gender"
            android:textAppearance="@style/TextAppearance.Light"
            app:textHint="Gender" />

        <school.campusconnect.views.DrawableEditText
            android:id="@+id/dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_20dp"
            app:leftDrawable="@drawable/ic_cake"
            android:textAppearance="@style/TextAppearance.Light"
            app:textHint="@string/hint_lead_dob" />

        <school.campusconnect.views.DrawableEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_20dp"
            android:inputType="textNoSuggestions"
            app:leftDrawable="@drawable/ic_email"
            android:textAppearance="@style/TextAppearance.Light"
            app:textHint="Email ID" />

        <school.campusconnect.views.DrawableEditText
            android:id="@+id/occupation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_20dp"
            android:inputType="textCapSentences|textNoSuggestions"
            android:textAppearance="@style/TextAppearance.Light"
            app:leftDrawable="@drawable/ic_occupation"
            app:textHint="Occupation" />

        <school.campusconnect.views.DrawableEditText
            android:id="@+id/qualification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_20dp"
            android:inputType="textCapSentences|textNoSuggestions"
            android:textAppearance="@style/TextAppearance.Light"
            app:leftDrawable="@drawable/ic_qualification"
            app:textHint="Qualification" />

        <school.campusconnect.views.DrawableEditText
            android:id="@+id/roll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_20dp"
            android:inputType="textNoSuggestions"
            android:visibility="gone"
            app:leftDrawable="@drawable/ic_contacts"
            android:textAppearance="@style/TextAppearance.Light"
            app:textHint="@string/hint_lead_roll" />

    </LinearLayout>

    <!--</ScrollView>-->

</RelativeLayout>
