<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/padding_10dp"
    app:cardElevation="@dimen/padding_5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_15dp">

            <LinearLayout
                android:id="@+id/llSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/lbl_chapter_name"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/LabelNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_20dp"
                    android:paddingLeft="@dimen/padding_10dp"
                    android:text="@string/lbl_enter_chapter_name"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary" />

                <EditText
                    android:id="@+id/etName"
                    style="@style/RegEditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_button_height"
                    android:layout_marginTop="@dimen/padding_5dp"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_25dp"
                android:layout_marginBottom="@dimen/padding_5dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/padding_5dp"
                    android:background="@drawable/add_post_button_bg"
                    android:text="@string/lbl_submit"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/btnCancel"
            android:layout_width="@dimen/padding_40dp"
            android:layout_height="@dimen/padding_40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/padding_5dp"
            android:layout_marginEnd="@dimen/padding_5dp"
            android:padding="@dimen/padding_5dp"
            android:src="@drawable/ic_close"
            app:tint="@color/color_label" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>