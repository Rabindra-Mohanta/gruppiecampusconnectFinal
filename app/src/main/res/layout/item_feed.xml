<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        android:layout_marginBottom="@dimen/padding_10dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/llReaded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <View
                android:visibility="invisible"
                android:id="@+id/viewReaded"
                android:layout_width="2dp"
                android:layout_alignTop="@id/tvTime"
                android:layout_alignBottom="@id/tvdesc"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"/>

            <TextView
                android:layout_toRightOf="@id/viewReaded"
                android:layout_marginLeft="@dimen/padding_5dp"
                android:id="@+id/tvTime"
                style="@style/LabelNormal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/padding_20dp"
                android:textColor="@color/colorPrimary"
                android:text="29/01/2022"/>

            <View
                android:layout_marginTop="3dp"
                android:id="@+id/view"
                android:layout_marginLeft="@dimen/padding_10dp"
                android:layout_toRightOf="@id/tvTime"
                android:layout_width="1dp"
                android:layout_height="@dimen/padding_15dp"
                android:background="@color/colorPrimary"/>

            <TextView
                android:layout_marginLeft="@dimen/padding_20dp"
                android:layout_toRightOf="@id/view"
                android:id="@+id/tvdesc"
                style="@style/LabelNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextLight"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."/>

        </RelativeLayout>

        <View
            android:id="@+id/llBottomLine"
            android:layout_marginTop="@dimen/padding_10dp"
            android:layout_below="@id/llReaded"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_divider"/>

    </RelativeLayout>
</layout>
