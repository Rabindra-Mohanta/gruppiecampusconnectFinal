<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activities.VideoCallingActivity">

        <TextView
            style="@style/LabelNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_20dp"
            android:paddingLeft="@dimen/padding_10dp"
            android:textSize="25sp"
            android:text="VIDEO CALL  Fdsa f asas  fad asdf  asfd\n dfsfdsasdaffds\nfsdsdfdsdsfsdfasdafdfsa\n"
            android:textAllCaps="true"
            android:layout_centerInParent="true"
            android:textColor="@color/colorPrimary" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:background="@color/reply_comment_bg"/>

        <Button
            android:id="@+id/btnStart"
            android:layout_width="140dp"
            android:background="@drawable/red_btn_bg_normal"
            android:layout_margin="@dimen/padding_10dp"
            android:layout_alignParentBottom="true"
            android:text="REJECT"
            android:textColor="@color/white"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/btnStop"
            android:layout_width="140dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/padding_10dp"
            android:background="@drawable/green_call_btn_bg"
            android:text="ACCEPT"
            android:textColor="@color/white"
            android:layout_height="40dp" />
    </RelativeLayout>
</layout>
