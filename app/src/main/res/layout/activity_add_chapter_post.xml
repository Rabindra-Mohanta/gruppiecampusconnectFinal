<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.AddPostActivity"
    android:background="@color/colorTextWhiteLight"
    android:orientation="vertical">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/layout_toolbar_home_back" />

            <Button
                android:layout_alignParentRight="true"
                android:id="@+id/btnShare"
                android:layout_width="wrap_content"
               android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:text="@string/lbl_share"
                android:layout_marginRight="@dimen/padding_40dp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_above="@id/btnCancel"
        android:layout_width="match_parent"
        android:layout_below="@id/appBar"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_10dp"
            android:paddingLeft="@dimen/padding_10dp"
            android:paddingRight="@dimen/padding_10dp">
            <TextView
                android:id="@+id/tvLabelTitle"
                android:layout_width="match_parent"
                style="@style/LabelHeader1"
                android:paddingStart="@dimen/padding_5dp"
                android:layout_marginTop="@dimen/padding_10dp"
                android:text="@string/lbl_chapter_name"
                android:visibility="visible"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginStart="@dimen/padding_5dp"
                android:layout_marginEnd="@dimen/padding_5dp"
                android:layout_marginTop="@dimen/padding_5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="0.3"
                    android:id="@+id/llTop"
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:id="@+id/spChapter"
                            style="@style/RegEditText"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/login_button_height" />

                        <ImageView
                            android:layout_width="25dp"
                            android:src="@drawable/icon_down_white"
                            android:layout_marginEnd="@dimen/padding_10dp"
                            android:layout_gravity="right|center"
                            android:layout_height="25dp"/>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1.7"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="@dimen/padding_5dp"
                        android:id="@+id/imgAddChapter"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="@dimen/padding_5dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/round_primary_bg"
                        android:src="@drawable/ic_vector_add"
                        />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/padding_10dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardChapterName"
                    android:layout_width="match_parent"
                    app:cardElevation="4dp"
                    android:layout_margin="@dimen/padding_5dp"
                    app:cardCornerRadius="@dimen/padding_5dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et_title"
                        style="@style/CommentEditText"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_margin="@dimen/padding_5dp"
                        android:background="@null"
                        android:gravity="start|center"
                        android:hint="@string/lbl_enter_chapter_name"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLength="200"
                        android:scrollbars="vertical"
                        android:visibility="visible" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/padding_10dp"
                    style="@style/LabelHeader1"
                    android:paddingLeft="@dimen/padding_5dp"
                    android:text="@string/lbl_topic_name"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="4dp"
                    android:layout_margin="@dimen/padding_5dp"
                    app:cardCornerRadius="@dimen/padding_5dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_description"
                        style="@style/CommentEditText"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_margin="@dimen/padding_5dp"
                        android:background="@null"
                        android:gravity="top"
                        android:inputType="textMultiLine|textCapSentences"
                        android:scrollbars="vertical"
                        android:visibility="visible" />
                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/padding_5dp"
                    style="@style/LabelHeader1"
                    android:paddingLeft="@dimen/padding_5dp"
                    android:text="@string/lbl_attechment"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="4dp"
                    android:layout_margin="@dimen/padding_5dp"
                    app:cardCornerRadius="@dimen/padding_25dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingTop="@dimen/padding_10dp"
                        android:paddingBottom="@dimen/padding_5dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/llImage"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="wrap_content" >

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/img_image"
                                    android:layout_width="30dp"
                                    android:src="@drawable/icon_gallery"
                                    android:layout_height="30dp" />
                                <ProgressBar
                                    android:id="@+id/pbImgLoading"
                                    android:layout_width="30dp"
                                    android:visibility="gone"
                                    android:background="@color/white"
                                    android:layout_height="30dp" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginTop="@dimen/padding_5dp"
                                android:text="@string/lbl_image"
                                style="@style/LabelNormal"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/llVideo"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="wrap_content" >

                            <ImageView
                                android:id="@+id/img_video"
                                android:layout_width="30dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/icon_youtube"
                                android:layout_height="30dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginTop="@dimen/padding_5dp"
                                android:text="@string/lbl_video"
                                style="@style/LabelNormal"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llYoutubeLink"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_youtube"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/icon_popup_youtube" />

                            <TextView
                                style="@style/LabelNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_5dp"
                                android:text="@string/lbl_youtube" />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/llDoc"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="wrap_content" >

                            <ImageView
                                android:id="@+id/imgDoc"
                                android:layout_width="30dp"
                                android:src="@drawable/icon_doc"
                                android:layout_height="30dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginTop="@dimen/padding_5dp"
                                android:text="@string/lbl_documents"
                                style="@style/LabelNormal"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llAudio"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="wrap_content" >

                            <ImageView
                                android:id="@+id/imgAudio"
                                android:layout_width="30dp"
                                android:src="@drawable/ic_mic_audio"
                                android:layout_height="30dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginTop="@dimen/padding_5dp"
                                android:text="@string/lbl_audio"
                                style="@style/LabelNormal"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/llAudioTimer"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp"
                    android:layout_margin="@dimen/padding_5dp"
                    app:cardCornerRadius="@dimen/padding_25dp"
                    app:cardBackgroundColor="@color/white">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:padding="@dimen/padding_10dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imgMic"
                            android:layout_width="30dp"
                            android:src="@drawable/ic_mic_red"
                            android:layout_height="30dp" />

                        <TextView
                            android:layout_marginHorizontal="@dimen/padding_10dp"
                            android:id="@+id/tvAudioTimer"
                            android:layout_toRightOf="@id/imgMic"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="@dimen/padding_5dp"
                            android:text="00:00"
                            style="@style/LabelNormal"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/llAudioPreview"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/llLeftAudioView"
                    android:layout_width="@dimen/pdf_download_icon_size"
                    android:layout_margin="@dimen/padding_15dp"
                    android:layout_marginTop="@dimen/padding_10dp"
                    android:layout_height="@dimen/pdf_download_icon_size"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imgPlayAudio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_play_audio"
                        app:tint="@color/colorPrimary"
                        android:visibility="visible"
                        />

                    <ImageView
                        android:id="@+id/imgPauseAudio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic__stop_audio"
                        app:tint="@color/colorPrimary"
                        android:visibility="gone"
                        />


                </LinearLayout>

                <LinearLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/llLeftAudioView"
                    android:layout_toLeftOf="@id/imgDeleteAudio"
                    android:orientation="vertical">
                    <SeekBar
                        android:id="@+id/seekBarAudio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:color="@color/colorPrimary"
                        android:clickable="false"
                        android:thumbTint="@color/colorPrimary"
                        android:focusableInTouchMode="false"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="@dimen/padding_15dp"
                            android:id="@+id/tvTimeAudio"
                            style="@style/LabelSmall"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textColor="@color/colorTextLight" />

                        <TextView
                            android:id="@+id/tvTimeTotalAudio"
                            style="@style/LabelSmall"
                            android:layout_marginRight="@dimen/padding_15dp"
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textColor="@color/colorTextLight" />
                    </RelativeLayout>

                </LinearLayout>

                <ImageView
                    android:layout_alignParentRight="true"
                    android:id="@+id/imgDeleteAudio"
                    android:layout_width="@dimen/padding_40dp"
                    android:layout_height="@dimen/padding_40dp"
                    android:adjustViewBounds="true"
                    android:layout_centerVertical="true"
                    android:tint="@color/white"
                    android:layout_margin="@dimen/padding_15dp"
                    android:src="@drawable/ic_delete_black"
                    android:background="@drawable/round_primary_bg"
                    android:padding="@dimen/padding_5dp"
                    />


            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/llPersonalSetting"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_5dp"
                    android:padding="@dimen/padding_5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/padding_10dp"
                        android:gravity="center"
                        android:text="@string/lbl_allow_post" />

                    <Switch
                        android:id="@+id/switch_reply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_5dp"
                    android:padding="@dimen/padding_5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/padding_10dp"
                        android:gravity="center"
                        android:text="@string/lbl_allow_comments" />

                    <Switch
                        android:id="@+id/switch_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:checked="true"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <Button
        android:id="@+id/btnCancel"
        android:visibility="gone"
        style="@style/AddPostButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/padding_20dp"
        android:layout_marginTop="@dimen/padding_20dp"
        android:layout_marginEnd="@dimen/padding_20dp"
        android:layout_marginBottom="@dimen/padding_20dp"
        android:text="@string/places_cancel" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>