<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:layout_marginHorizontal="@dimen/padding_15dp"
    app:cardCornerRadius="@dimen/padding_5dp"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/padding_5dp"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgEvent"
            android:layout_width="@dimen/padding_20dp"
            android:src="@drawable/event_bg"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/padding_10dp"
            android:layout_height="@dimen/padding_20dp" />

        <LinearLayout
            android:id="@+id/llMain"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@id/imgEvent"
            android:padding="@dimen/padding_10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvData"
                android:layout_width="match_parent"

                android:textColor="@color/colorTextDark"
                android:textSize="@dimen/text_size_18sp"
                android:layout_below="@id/compactcalendar_view"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"

                android:textColor="@color/colorTextDark"
                android:layout_below="@id/compactcalendar_view"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_below="@+id/llMain"
            android:layout_width="match_parent"
            android:background="@color/color_divider"
            android:layout_height="1px"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
