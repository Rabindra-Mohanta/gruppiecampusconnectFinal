<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_5dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            android:layout_marginHorizontal="@dimen/padding_5dp"
            app:cardCornerRadius="@dimen/padding_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_toLeftOf="@id/imgTree"
                    android:layout_margin="@dimen/padding_10dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvTeamName"
                        style="@style/LabelHeader2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary" />
                    <TextView
                        android:id="@+id/tvTopicName"
                        style="@style/LabelNormal"
                        android:layout_marginTop="@dimen/padding_5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvChpName"
                        style="@style/LabelNormal"
                        android:layout_marginTop="@dimen/padding_5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imgTree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="16dp"
                    android:src="@drawable/icon_right_arraw"
                    android:visibility="gone"
                    android:tint="@color/colorTextDark"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="16dp" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
