<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="elevation">0dp</item>
        <item name="android:editTextStyle">@style/AppTheme.EditText</item>
        <item name="android:typeface">serif</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>
    <style name="FragmentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">50%</item>
        <item name="android:windowMinWidthMinor">70%</item>
    </style>




    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <!-- Used for the background -->
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">@color/color_white</item>
        <item name="tabTextAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="tabSelectedTextColor">@color/color_white</item>
    </style>

    <style name="AppTheme.TabLayoutProfile" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/color_green</item>
        <item name="tabIndicatorHeight">5dp</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/AppTheme.TabTextAppearanceProfile</item>
        <item name="tabSelectedTextColor">@color/color_white</item>
    </style>


    <style name="AppTheme.TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="AppTheme.TabTextAppearanceProfile" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">#D2D2D2</item>
        <item name="colorControlActivated">#FF6B3D</item>
        <item name="colorControlHighlight">#FF6B3D</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">#6D777E</item>
        <item name="android:textColor">#3C5F3D</item>
    </style>
    <style name="AppDialog" parent="Theme.AppCompat.Light.Dialog.Alert"/>


    <style name="AppTheme.AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#3f3f3f</item>
        <item name="android:textColorSecondary">#3f3f3f</item>
        <!-- Used for the background -->
        <item name="android:background">@color/color_white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:windowTitleStyle">@style/DialogTitleTextStyle</item>
    </style>

    <style name="ActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:showDividers">beginning</item>
        <item name="android:divider">@color/color_grey_icon</item>
    </style>

    <style name="DialogTitleTextStyle">
        <item name="android:textColor">#242527</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="AppTheme.AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#000</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Toolbar.TitleTextAbout" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.Regular</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:singleLine">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.Light</item>
    </style>

    <style name="Toolbar.SubTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_13sp</item>
        <item name="android:singleLine">false</item>
        <item name="android:textAppearance">@style/TextAppearance.Light</item>
    </style>

    <style name="testtitlesize" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>


    <style name="TextAppearance.Bold" parent="android:TextAppearance">
        <item name="android:textColor">@color/color_grey_icon</item>
        <!-- Custom Attr-->
        <item name="fontPath">fonts/robo_bold.ttf</item>
    </style>


    <style name="TextAppearance.Regular" parent="android:TextAppearance">

        <item name="android:textColor">@color/color_grey_icon</item>
        <!-- Custom Attr-->
        <item name="fontPath">fonts/robo_regular.ttf</item>
    </style>


    <style name="TextAppearance.Light" parent="android:TextAppearance">
        <item name="android:textColor">@color/color_grey_icon</item>
        <!-- Custom Attr-->
        <item name="fontPath">fonts/robo_light.ttf</item>
    </style>

    <style name="Profile1TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/TextAppearance.Light</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

    <style name="TabStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="MyTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/colorTabNormal</item>
        <item name="textAllCaps">true</item>
    </style>


    <style name="LabelSmall">
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>
    <style name="LabelNormal">
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="LabelHeader1">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>
    <style name="LabelHeader2">
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>


    <style name="LabelEmptyText">
        <item name="android:textSize">60sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/login_button_bg</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="AddPostButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:background">@drawable/add_post_button_bg</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>



    <style name="LoginButton_Top" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>


    <style name="SeachEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="LoginEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:backgroundTint" tools:ignore="NewApi">@color/colorTextWhite</item>
    </style>
    <style name="RegEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColorHint">@color/colorTextWhiteLight</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/edittext_bg</item>
    </style>


    <style name="commonSpinnerWhite" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:background">@drawable/spinner_white_bg</item>
    </style>

    <style name="RegEditTextWhite" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColorHint">@color/colorTextLight</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="commonSpinner" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/spinner_bg</item>
    </style>
    <style name="CommentEditText">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColorHint">@color/colorTextNormal</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/comment_bg_new</item>
    </style>



    <style name="OTPEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textColorHint">@color/colorTextWhite</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:backgroundTint" tools:ignore="NewApi">@android:color/transparent</item>
    </style>


    <style name="ProgressWhite" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/white</item>
    </style>

</resources>
